#!/usr/bin/env fish

curl -sL git.io/fisher | source
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
test ! -d $GOENV_ROOT
and git clone https://github.com/syndbg/goenv.git $GOENV_ROOT
and configure-goenv-command

fisher install \
    jorgebucaran/fisher \
    jorgebucaran/nvm.fish \
    edc/bass

cargo install \
   cargo-edit

code --install-extension bmalehorn.vscode-fish
code --install-extension codezombiech.gitignore
code --install-extension donjayamanne.githistory
code --install-extension eriklynd.json-tools
code --install-extension golang.go
code --install-extension hashicorp.terraform
code --install-extension kumar-harsh.graphql-for-vscode
code --install-extension mrmlnc.vscode-pugbeautify
code --install-extension mrmlnc.vscode-puglint
code --install-extension ms-azuretools.vscode-docker
code --install-extension Poorchop.theme-darktooth
code --install-extension run-at-scale.terraform-doc-snippets
code --install-extension rust-lang.rust
code --install-extension sysoev.language-stylus
code --install-extension vadimcn.vscode-lldb
code --install-extension waderyan.gitblame
code --install-extension wmaurer.change-case

#!/usr/bin/env fish

if ! command -v brew &>/dev/null
    bash -c "(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
end

brew update

brew install \
    awscli \
    bash \
    bash-completion \
    fish \
    gh \
    git \
    jq \
    m-cli \
    mycli \
    mysql \
    openssl \
    pgcli \
    postgresql \
    redis \
    sl \
    tfenv \
    tmux

brew cask install \
    alacritty \
    authy \
    discord \
    firefox \
    microsoft-outlook \
    mysql-shell \
    mysqlworkbench \
    postman \
    shiba \
    skype \
    slack \
    spectacle \
    spotify \
    steam \
    telegram-desktop \
    virtualbox \
    visual-studio-code \
    vlc \
    whatsapp \
    zoomus

install-general-pkgs

#!/usr/bin/env bash

# Installs Arch packages: X11 stuff.
yaourt -S --noconfirm \
    extra/xorg-server \
    extra/xorg-xinit \
    extra/xorg-xrandr

# Installs Arch packages: current window manager.
yaourt -S --noconfirm \
    community/i3-gaps \
    community/i3-wm \
    community/i3blocks \
    community/i3lock \
    community/i3status \
    community/dmenu

# Installs Arch packages: terminals.
yaourt -S --noconfirm \
    aur/alacritty-scrollback-git \
    extra/xterm

# Installs Arch packages: programming languages.
yaourt -S --noconfirm \
    extra/go \
    community/nodejs \
    community/npm

# Installs Arch packages: editors.
yaourt -S --noconfirm \
    aur/visual-studio-code-bin \
    community/neovim

# Installs Arch packages: browsers.
yaourt -S --noconfirm \
    extra/firefox \
    aur/tor-browser

# Installs Arch packages: other tools.
yaourt -S --noconfirm \
    community/rtorrent \
    community/telegram-desktop \
    extra/vlc \
    multilib/steam \
    multilib/steam-native-runtime \
    aur/discord \
    aur/popcorntime \
    aur/spotify \
    aur/stremio-legacy

# Install packages that aren't OS-specific.
install-general-pkgs

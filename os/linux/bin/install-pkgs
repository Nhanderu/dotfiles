#!/usr/bin/env bash

set -e

# Installs Arch packages: X11 stuff.
yaourt -S --noconfirm \
    extra/xorg-server \
    extra/xorg-xinit \
    extra/xorg-xrandr

# Installs Arch packages: current window manager.
yaourt -S --noconfirm \
    community/i3-gaps \
    community/i3blocks \
    community/i3lock \
    aur/j4-dmenu-desktop-git \
    aur/i3status-rust

# Installs Arch packages: terminals.
yaourt -S --noconfirm \
    community/alacritty \
    community/alacritty-terminfo \
    extra/xterm

# Installs Arch packages: programming languages.
yaourt -S --noconfirm \
    community/go \
    community/nodejs \
    community/npm

# Installs Arch packages: editors.
yaourt -S --noconfirm \
    aur/visual-studio-code-bin \
    community/neovim \
    extra/vim \
    extra/emacs \
    core/vi

# Installs Arch packages: browsers.
yaourt -S --noconfirm \
    extra/firefox
    # aur/tor-browser

# Installs Arch packages: other tools.
yaourt -S --noconfirm \
    community/discord \
    community/rtorrent \
    community/telegram-desktop \
    community/xdotool \
    community/sl \
    # multilib/steam \
    extra/feh \
    extra/vlc \
    extra/gimp \
    extra/nitrogen \
    extra/zip \
    extra/unrar \
    extra/unzip \
    aur/popcorntime \
    aur/spotify \
    aur/stremio-legacy \
    aur/aura-bin \
    aur/heroku-cli \
    aur/pgcli-git \
    aur/postman

# Install packages that aren't OS-specific.
install-general-pkgs
